extends layout

block content
    
  .row.justify-content-center
    .col-sm-6
      if error
          .alert.alert-danger(role="alert") #{error} is invalid.
      legend New Pet
      form(action="#", id="new-pet")
        .form-group
            label Name
            input.form-control(name="name" required maxlength="25")
        .form-group
            label Birthday
            input.form-control(name="birthday" required type="date")
        .form-group
            label Species
            input.form-control(name="species" required maxlength="25")
        .form-group
            label Avatar*
            input.form-control(name="avatar" type="file" required)  
        .form-group
            label Favorite Food
            input.form-control(name="favoriteFood" required maxlength="25") 
        .form-group
            label Description
            textarea.form-control(name="description" required maxlength="250")
        .form-group
            label Price*
            input.form-control(name="price" required type="number")   
        button(type="submit").btn.btn-primary Save
