extends layout

block content
    
    .row.justify-content-center
        .col-sm-6
            legend New Pet
            form(action=`/pets/${pet._id}?_method=PUT`, method="POST", enctype="multipart/form-data")
                .form-group
                    label Name
                    input.form-control(name="name" value=pet.name required maxlength="25")
                .form-group
                    label Birthday
                    input.form-control(name="birthday" value=pet.birthday required type="date")   
                .form-group
                    label Species
                    input.form-control(name="species" value=pet.species required maxlength="25")    
                .form-group
                    label Avatar*
                    input.form-control(name="avatar" type="file" required)
                .form-group
                    label Favorite Food
                    input.form-control(name="favoriteFood" value=pet.favoriteFood required maxlength="25")    
                .form-group
                    label Description
                    textarea.form-control(name="description" required maxlength="250")= pet.description
                .form-group
                    label Price*
                    input.form-control(name="price" required type="number")
                button(type="submit").btn.btn-primary Save
            .text-right
                form(action=`/pets/${pet._id}?_method=DELETE`, method="POST")
                    button(type="submit").btn.btn-danger Remove
